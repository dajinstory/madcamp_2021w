<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="contact_image"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:src = "@drawable/default_photo"
        app:tint="#0F4C75"/>


    <TextView
        android:id="@+id/contact_name"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/contact_image"
        app:layout_constraintStart_toEndOf="@+id/contact_image"
        app:layout_constraintTop_toTopOf="@+id/contact_image"
        tools:text="Name" />

    <TextView
        android:id="@+id/contact_phone_number"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"

        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/contact_name"
        app:layout_constraintStart_toEndOf="@+id/contact_name"
        app:layout_constraintTop_toTopOf="@+id/contact_name"
        tools:text="Phone Number" />

    <Button
        android:id="@+id/contact_call"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"

        android:background="@drawable/phone"
        android:backgroundTint="#0F4C75"
        android:tint="#7E9FB5"
        app:layout_constraintBottom_toBottomOf="@+id/contact_phone_number"
        app:layout_constraintStart_toEndOf="@+id/contact_phone_number"
        app:layout_constraintTop_toTopOf="@+id/contact_phone_number" />

</androidx.constraintlayout.widget.ConstraintLayout>